{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h2>New discussion group</h2>
        {{ form_start(form, {'attr': {'class' : 'discussion-form'  }} ) }}
        <div class="row">
            <div class="input-field col s12 hide-field">
                {{ form_row(form.id) }}
            </div>
            <div class="input-field col s12">
                {{ form_label(form.name, "Discussion group name") }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="input-field col s12 hide-field">
                {{ form_row(form.ongoing) }}
            </div>
            <a><button class="btn btn-large waves-effect waves-light left" type="submit" name="action">
                Submit new group
                <i class="material-icons left">done</i>
            </button></a>
        </div>
        {{ form_end(form) }}
        <a href="{{ path('meritocrate_admin') }}"><button class="btn btn-large waves-effect waves-light right black">
            Back to home
            <i class="material-icons left">replay</i>
        </button></a>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
    $(document).ready(function() {
        $('select').material_select();
    });
    </script>
{% endblock %}

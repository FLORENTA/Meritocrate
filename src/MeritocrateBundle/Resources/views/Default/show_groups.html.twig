{% extends "base.html.twig" %}

{% block content %}
    <div class="container container-custom">
        <div class="row">
            <table class="highlight centered responsive-table">
                <thead>
                    <tr>
                        <th>Date of Creation</th>
                        <th>Group Name</th>
                        <th>Created By</th>
                        <th>Status</th>
                        <th>Results</th>
                    </tr>
                </thead>
                <tbody>
                    {% for group in groups %}
                        <tr>
                            <td>{{ group.datecreation|date('m/d/Y') }}, {{ group.datecreation|date('h:i:s a') }}</td>
                            <td>{{ group.name }}</td>
                            <td>{{ group.user.fullname }}</td>
                            <td>
                                {% if group.ongoing == 1 %}
                                    <a href="{{ path('meritocrate_discussion_group', {id : group.id}) }}" class="btn waves-effect waves-light">
                                            Open
                                        <i class="material-icons left">lock_open</i>
                                    </a>
                                {% else %}
                                    <a class="btn waves-effect waves-light disabled">
                                        Closed
                                        <i class="material-icons left">lock</i>
                                    </a>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('meritocrate_group_statistics', {id : group.id}) }}" class="btn waves-effect waves-light">
                                    Results
                                    <i class="material-icons left">assessment</i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col s12">
                <a href="{{ path('meritocrate_admin') }}">
                    <button class="btn btn-large waves-effect waves-light left black">
                        Back to Home
                        <i class="material-icons material-custom left">replay</i>
                    </button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
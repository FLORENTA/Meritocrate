{% extends "base.html.twig" %}

{% block content %}
    <div class="container">
        <h2>Meritocrate</h2>
        <div class="row">
            <table class="highlight centered">
                <thead>
                    <tr>
                        <th>Date of Creation</th>
                        <th>Group Name</th>
                        <th>Created By</th>
                        <th>Join</th>
                        <th>Results</th>
                    </tr>
                </thead>
                <tbody>
                    {% for group in groups %}
                    <tr>
                        <td>{{ group.datecreation|date('m/d/Y') }}, {{ group.datecreation|date('h:i:s a') }}</td>
                        <td>{{ group.name }}</td>
                        <td>{{ group.user.fullname }}</td>
                        <td>
                            {% if group.ongoing == 1 %}
                                <a href="{{ path('meritocrate_discussion_group', {id : group.id}) }}">
                                    <button class="btn waves-effect waves-light">
                                        Join
                                    <i class="material-icons left">lock_open</i>
                                    </button>
                                </a>
                            {% else %}
                                <button class="btn waves-effect waves-light disabled">
                                    Closed
                                    <i class="material-icons left">lock</i>
                                </button>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('meritocrate_group_statistics', {id : group.id}) }}">
                                <button class="btn waves-effect waves-light">
                                    assessment
                                    <i class="material-icons left">lock_open</i>
                                </button>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
            <a href="{{ path('meritocrate_admin') }}"><button class="btn btn-large waves-effect waves-light left black">
                    Back to Home
                    <i class="material-icons left">replay</i>
                </button>
            </a>
        </div>
    </div>
{% endblock %}